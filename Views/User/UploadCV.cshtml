@{
    ViewData["Title"] = "Cargar CV";
}

<h2>Cargar CV</h2>

<form asp-action="UploadCV" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="cv">Seleccionar CV (PDF, max 5MB):</label>
        <input type="file" name="cv" accept=".pdf" class="form-control" required />
    </div>

    <input type="submit" class="btn btn-primary" value="Subir CV" />
</form>
